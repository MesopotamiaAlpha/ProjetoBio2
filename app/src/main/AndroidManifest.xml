<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="biocom.projeto.projetobio">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AtividadePrincipal"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FamiliaAtividade"
            android:label="@string/title_activity_familia_atividade"
            android:parentActivityName=".AtividadePrincipal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FotoAtividade"
            android:label="@string/title_activity_foto_atividade"
            android:parentActivityName=".AtividadePrincipal"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="biocom.projeto.projetobio.AtividadePrincipal" />
        </activity>
        <activity
            android:name=".PesquisaAtividade"
            android:label="@string/title_activity_pesquisa_atividade"
            android:parentActivityName=".AtividadePrincipal"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>