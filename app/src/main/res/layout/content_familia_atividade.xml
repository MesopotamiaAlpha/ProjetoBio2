<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="biocom.projeto.projetobio.FamiliaAtividade"
    tools:showIn="@layout/activity_familia_atividade">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"

            android:layout_width="300dp"
            android:layout_height="700dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="biocom.projeto.projetobio.FamiliaAtividade"
            tools:showIn="@layout/activity_familia_atividade">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Manto de Rei"
                android:id="@+id/textView5"
                android:singleLine="false"
                android:textSize="20dp"
                android:textStyle="italic"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/textView9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome popular:"
                android:id="@+id/textView4"
                android:textSize="20dp"
                android:textStyle="bold|normal"
                android:shadowColor="@color/abc_input_method_navigation_guard"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView3" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voltar"
                android:id="@+id/btnVoltar"
                android:layout_marginBottom="60dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Espécie:"
                android:id="@+id/textView6"
                android:textSize="20dp"
                android:textStyle="bold|normal"
                android:shadowColor="@color/abc_input_method_navigation_guard"
                android:layout_below="@+id/textView4"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Thunbergia erecta"
                android:id="@+id/lblEspecie"
                android:singleLine="false"
                android:textSize="20dp"

                android:layout_below="@+id/textView5"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Familia:"
                android:id="@+id/textView8"
                android:textSize="20dp"
                android:textStyle="bold|normal"
                android:shadowColor="@color/abc_input_method_navigation_guard"
                android:layout_below="@+id/textView6"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Acanthaceae"
                android:id="@+id/textView9"
                android:singleLine="false"
                android:textSize="20dp"
                android:layout_below="@+id/lblEspecie"
                android:layout_toEndOf="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="        → Folhas opostas ou verticiladas.
        → Corola zigomorfa.
        → Estilete Terminal.
        → Estames não inclusos.
        → Um ou dois estigmas.
        → Sementes não aladas.
        → Ovário Uni ou Bilocular.
        → Até quatro óvulos no ovário."
                android:id="@+id/textView10"
                android:textSize="15dp"
                android:layout_below="@+id/textView3"
                android:layout_alignParentStart="true"
                android:layout_marginTop="86dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Magnoliopsida: Flores diclamídeas, simpétalas, ovário súpero, isostêmone, folhas opostas, verticiladas, rosuladas, reduzidas a escamas ou ausentes."
                android:id="@+id/textView3"
                android:textSize="15dp"


                android:layout_below="@+id/textView8"
                android:layout_alignStart="@+id/textView10"
                android:layout_marginTop="34dp" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>

